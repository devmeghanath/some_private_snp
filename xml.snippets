snippet <action> "Action"
<record id="${1:model_name}_action" model="ir.actions.act_window">
	<field name="name">${2:Action Name}</field>
	<field name="res_model">${3:${1/[_]/./g}}</field>
	<field name="view_mode">${4:tree,form}</field>
	<field name="domain">[${5}]</field>
	<field name="context">{${6}}</field>
	<field name="help" type="html">
		${0}
	</field>
</record>
endsnippet

snippet <actionView> "View in Action"
<record id="action_${1:action_view_name}" model="ir.actions.act_window.view">
	<field name="sequence" eval="${2:1}"/>
	<field name="view_mode">${3:view_name}</field>
	<field name="act_window_id" ref="${4:action_id}"/>
	<field name="view_id" ref="${5:view_id}"/>
</record>
endsnippet

snippet <actionServer> "Server Action"
<record id="${1:model_name}_action_server" model="ir.actions.server">
	<field name="name">${2:Action Name}</field>
	<field name="model_id" ref="model_${1:model_name}"/>
	<field name="binding_model_id" ref="model_${1:model_name}"/>
	<field name="state">code</field>
	<field name="code">${0}</field>
</record>
endsnippet

snippet <actionUrl> "URL Action"
<record id="action_${1:action_name}" model="ir.actions.act_url">
	<field name="name">${2:Action Name}</field>
	<field name="url">${3:url}</field>
	<field name="target">${4|new,self|}</field>
</record>
endsnippet

snippet <actionClient> "Client Action"
<record id="action_${1:action_name}" model="ir.actions.client">
