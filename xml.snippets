snippet <actionReport> "Report Action"
<record id="action_report_${1:action_name}" model="ir.actions.report">
	<field name="name">${2:Name}</field>
	<field name="model">${3:${1/[_]/./g}}</field>
	<field name="report_type">${4|qweb-pdf,qweb-html,qweb-text|}</field>
	<field name="report_name">${5:report.name}</field>
	<field name="report_file">${5:report.name}</field>
	<field name="print_report_name">'%s' % object.name</field>
	<field name="binding_model_id" ref="model_${1}"/>
	<field name="binding_type">report</field>
</record>
endsnippet

snippet <report> "Report Template"
<template id="${1:report_template_name}">
	<t t-call="web.html_container">
		<t t-foreach="docs" t-as="o">
			<t t-call="web.${2|external,internal|}_layout">
				<div class="page">
					${0}
				</div>
			</t>
		</t>
	</t>
</template>
endsnippet

snippet <cron> "Cron"
<record id="${1:model_name}_cron" model="ir.cron">
	<field name="name">${2:Cron Name}</field>
	<field name="model_id" ref="model_${1:model_name}"/>
	<field name="interval_number">${4:1}</field>
	<field name="interval_type">${5|minutes,hours,days,weeks,months|}</field>
	<field name="numbercall">${6:-1}</field>
	<field name="state">code</field>
	<field name="code">${0}</field>
</record>
endsnippet

snippet <record> "Record"
<record id="${1:record_name}" model="${2:model_name}">
